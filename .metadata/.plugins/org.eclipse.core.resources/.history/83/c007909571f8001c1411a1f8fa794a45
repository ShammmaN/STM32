#include "stm32f4xx.h"
#include "./key.h"
#include "menu.h"
#include "main.h"

uint16_t Position =1;
volatile uint16_t i=80;
char text[20];
volatile static uint8_t cnt=0;
volatile static uint8_t st1=0,st2=0,st3=0;


uint8_t debouncer()
{
	//TODO: make a debouncer

return cnt;
}




void Key_Read(uint16_t GPIO_Pin)
{




	switch(GPIO_Pin)
		{



		case B1_Pin :							// W lewo
			   (*key_back_func)();

				break;


		case B2_Pin :							// W Górę
				(*key_prev_func)();
				break;


		case B3_Pin :

				lcd_clear();
				lcd_line_1("Plus");
				lcd_line_2("Wartosc i : ");
				lcd_line_4(text);
				i++;
				break;

		case B4_Pin :							// Do dołu

				(*key_next_func)();
				break;


		case B5_Pin :

				lcd_clear();
				lcd_line_1("Minus");
				lcd_line_2("Wartosc i : ");

				lcd_line_4(text);

				i--;
				break;

		case B6_Pin :							// W prawo
			(*key_enter_func)();
				break;

			}



}
